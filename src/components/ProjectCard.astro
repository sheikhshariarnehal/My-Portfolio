---
export interface Props {
  name: string;
  desc: string;
  image: string;
  category: string;
  links: {
    view: string;
    code: string;
  };
  isFirst?: boolean;
}

const { name, desc, image, category, links, isFirst = false } = Astro.props;
---

<div class={`grid-item ${category}`}>
  <div class="box tilt">
    <img
      draggable="false"
      src={`/assets/images/projects/${image}.webp`}
      alt={`${name} - ${category} Project by Sheikh Shariar Nehal`}
      loading={isFirst ? 'eager' : 'lazy'}
      fetchpriority={isFirst ? 'high' : undefined}
    />
    <div class="content">
      <div class="tag">
        <h3>{name}</h3>
      </div>
      <div class="desc">
        <p>{desc}</p>
        <div class="btns">
          <a href={links.view} class="btn" target="_blank" rel="noopener noreferrer">
            <i class="fas fa-eye"></i> View
          </a>
          <a href={links.code} class="btn" target="_blank" rel="noopener noreferrer">
            Code <i class="fas fa-code"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
