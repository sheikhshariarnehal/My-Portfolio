  { href: isSubPage ? '/#about' : '#about', label: 'about' },
  { href: isSubPage ? '/#skills' : '#skills', label: 'skills' },
  { href: isSubPage ? '/#education' : '#education', label: 'education' },
  { href: '/projects', label: 'projects' },
  { href: '/experience', label: 'experience' },
];
