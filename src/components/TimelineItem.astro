---
export interface Props {
  organization: string;
  role: string;
  duration: string;
  position: 'left' | 'right';
}

const { organization, role, duration, position } = Astro.props;
---

<div class={`container ${position}`}>
  <div class="content">
    <div class="tag">
      <h2>{organization}</h2>
    </div>
    <div class="desc">
      <h3>{role}</h3>
      <p>{duration}</p>
    </div>
  </div>
</div>
