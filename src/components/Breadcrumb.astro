---
/**
 * Breadcrumb Navigation Component
 * Renders visible breadcrumb navigation with Schema.org microdata
 */
export interface BreadcrumbItem {
  label: string;
  href: string;
  current?: boolean;
}

export interface Props {
  items: BreadcrumbItem[];
  theme?: 'dark' | 'light';
}

const { items, theme = 'dark' } = Astro.props;
---

<nav class:list={['breadcrumb-nav', { 'breadcrumb-light': theme === 'light' }]} aria-label="Breadcrumb">
  <ol itemscope itemtype="https://schema.org/BreadcrumbList" class="breadcrumb-list">
    {items.map((item, index) => (
      <li
        class:list={['breadcrumb-item', { active: item.current }]}
        itemprop="itemListElement"
        itemscope
        itemtype="https://schema.org/ListItem"
      >
        {item.current ? (
          <span itemprop="name" aria-current="page">{item.label}</span>
        ) : (
          <a itemprop="item" href={item.href}>
            <span itemprop="name">{item.label}</span>
          </a>
        )}
        <meta itemprop="position" content={String(index + 1)} />
        {index < items.length - 1 && (
          <span class="breadcrumb-separator" aria-hidden="true">
            <i class="fas fa-chevron-right"></i>
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb-nav {
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 5.5rem auto 0;
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    padding: 0.75rem 1.25rem;
    margin: 0;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    backdrop-filter: blur(4px);
    gap: 0;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
  }

  .breadcrumb-item a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 500;
  }

  .breadcrumb-item a:hover,
  .breadcrumb-item a:focus {
    color: rgb(255, 230, 0);
    text-decoration: underline;
  }

  .breadcrumb-item.active span {
    color: rgb(255, 230, 0);
    font-weight: 600;
  }

  .breadcrumb-separator {
    margin: 0 0.6rem;
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.7rem;
  }

  /* Light background pages */
  .breadcrumb-light .breadcrumb-list {
    background: rgba(0, 0, 0, 0.04);
  }

  .breadcrumb-light .breadcrumb-item a {
    color: rgba(0, 0, 0, 0.6);
  }

  .breadcrumb-light .breadcrumb-item a:hover,
  .breadcrumb-light .breadcrumb-item a:focus {
    color: #2b3dda;
  }

  .breadcrumb-light .breadcrumb-item.active span {
    color: #2b3dda;
  }

  .breadcrumb-light .breadcrumb-separator {
    color: rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .breadcrumb-nav {
      padding: 0.75rem 1rem;
      margin-top: 5rem;
    }

    .breadcrumb-list {
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
    }
  }
</style>
