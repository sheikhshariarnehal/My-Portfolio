---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="404 - Page Not Found | Sheikh Shariar Nehal"
  description="The page you're looking for doesn't exist. Return to Sheikh Shariar Nehal's portfolio."
>
  <style>
    .error-page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #fff;
      text-align: center;
      padding: 2rem;
    }

    .error-page .gif-container {
      max-width: 500px;
      margin-bottom: 2rem;
    }

    .error-page .gif-container img {
      width: 100%;
      height: auto;
      border-radius: 1rem;
    }

    .error-page h1 {
      font-size: 8rem;
      font-weight: 800;
      margin-bottom: 1rem;
      text-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .error-page h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .error-page p {
      font-size: 1.6rem;
      margin-bottom: 2rem;
      max-width: 500px;
    }

    .error-page .btn-group {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .error-page .btn {
      padding: 1.5rem 3rem;
      font-size: 1.6rem;
      font-weight: 600;
      border-radius: 5rem;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .error-page .btn-primary {
      background: #fff;
      color: #764ba2;
    }

    .error-page .btn-primary:hover {
      background: #f0f0f0;
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .error-page .btn-outline {
      background: transparent;
      color: #fff;
      border: 2px solid #fff;
    }

    .error-page .btn-outline:hover {
      background: #fff;
      color: #764ba2;
    }

    .error-page .nav-links {
      margin-top: 3rem;
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .error-page .nav-links a {
      color: rgba(255, 255, 255, 0.8);
      font-size: 1.4rem;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .error-page .nav-links a:hover {
      color: #fff;
    }

    @media (max-width: 600px) {
      .error-page h1 {
        font-size: 5rem;
      }

      .error-page h2 {
        font-size: 2rem;
      }

      .error-page p {
        font-size: 1.4rem;
      }

      .error-page .btn {
        padding: 1.2rem 2.5rem;
        font-size: 1.4rem;
      }
    }
  </style>

  <div class="error-page">
    <div class="gif-container">
      <img
        src="https://cdn.dribbble.com/users/285475/screenshots/2083086/dribbble_1.gif"
        alt="404 Animation"
        loading="lazy"
      />
    </div>

    <h1>404</h1>
    <h2>Oops! Page Not Found</h2>
    <p>The page you're looking for doesn't exist or has been moved. Let's get you back on track.</p>

    <div class="btn-group">
      <a href="/" class="btn btn-primary">
        <i class="fas fa-home"></i> Go Home
      </a>
      <a href="/projects" class="btn btn-outline">
        <i class="fas fa-folder-open"></i> View Projects
      </a>
    </div>

    <div class="nav-links">
      <a href="/#about">About</a>
      <a href="/#skills">Skills</a>
      <a href="/#education">Education</a>
      <a href="/experience">Experience</a>
      <a href="/#contact">Contact</a>
    </div>
  </div>

  <script is:inline>
    // Simple animation for 404 text
    document.addEventListener('DOMContentLoaded', () => {
      const h1 = document.querySelector('.error-page h1');
      if (h1) {
        h1.style.opacity = '0';
        h1.style.transform = 'scale(0.5)';
        setTimeout(() => {
          h1.style.transition = 'all 0.5s ease';
          h1.style.opacity = '1';
          h1.style.transform = 'scale(1)';
        }, 100);
      }
    });
  </script>
</Layout>
