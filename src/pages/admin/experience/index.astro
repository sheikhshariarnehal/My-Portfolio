---
import AdminLayout from '../../../layouts/AdminLayout.astro';
---

<AdminLayout title="Manage Experience" activeTab="experience">
  <!-- Experience Header -->
  <div class="section-header">
    <div class="section-header-left">
      <div class="section-header-icon" style="background:rgba(139,92,246,0.1);color:#8b5cf6;">
        <i class="fas fa-briefcase"></i>
      </div>
      <div>
        <h2 class="section-title">Experience</h2>
        <p class="section-subtitle" id="experience-count-label">Loading...</p>
      </div>
    </div>
    <div class="section-header-right">
      <button class="btn-add-item" id="add-experience-btn">
        <i class="fas fa-plus"></i>
        <span>Add Experience</span>
      </button>
    </div>
  </div>

  <div class="data-card">
    <table class="data-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Company</th>
          <th>Duration</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="experience-table">
        <tr>
          <td colspan="5" class="empty-state">
            <i class="fas fa-spinner fa-spin"></i>
            <p>Loading...</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Add/Edit Modal -->
  <div class="modal-overlay" id="experience-modal">
    <div class="modal" style="max-width: 600px;">
      <div class="modal-header">
        <h3 id="modal-title">Add Experience</h3>
        <button class="modal-close" id="close-modal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form id="experience-form">
        <div class="modal-body">
          <input type="hidden" id="experience-id">
          <div class="form-group">
            <label for="experience-title">Job Title *</label>
            <input type="text" id="experience-title" required placeholder="Full Stack Developer">
          </div>
          <div class="form-group">
            <label for="experience-company">Company *</label>
            <input type="text" id="experience-company" required placeholder="Company Name">
          </div>
          <div class="form-group">
            <label for="experience-location">Location</label>
            <input type="text" id="experience-location" placeholder="Dhaka, Bangladesh">
          </div>
          <div class="form-group">
            <label for="experience-description">Description *</label>
            <textarea id="experience-description" required rows="3" placeholder="Job responsibilities..." style="width:100%;padding:12px;border:1px solid #e2e8f0;border-radius:8px;font-family:inherit;resize:vertical;"></textarea>
          </div>
          <div style="display:grid;grid-template-columns:1fr 1fr;gap:16px;">
            <div class="form-group">
              <label for="experience-start">Start Date *</label>
              <input type="date" id="experience-start" required>
            </div>
            <div class="form-group">
              <label for="experience-end">End Date</label>
              <input type="date" id="experience-end">
            </div>
          </div>
          <div class="form-group" style="display:flex;align-items:center;gap:12px;">
            <input type="checkbox" id="experience-current" style="width:20px;height:20px;">
            <label for="experience-current" style="margin:0;">Currently Working Here</label>
          </div>
          <div class="form-group">
            <label for="experience-order">Sort Order</label>
            <input type="number" id="experience-order" value="0" min="0">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-secondary" id="cancel-modal">Cancel</button>
          <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i>
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast"></div>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initExperiencePage, 500);
    });

    function initExperiencePage() {
      const modal = document.getElementById('experience-modal');
      const form = document.getElementById('experience-form');
      const addBtn = document.getElementById('add-experience-btn');
      const closeBtn = document.getElementById('close-modal');
      const cancelBtn = document.getElementById('cancel-modal');
      const modalTitle = document.getElementById('modal-title');
      const currentCheckbox = document.getElementById('experience-current');
      const endDateInput = document.getElementById('experience-end');

      loadExperience();

      currentCheckbox.addEventListener('change', () => {
        endDateInput.disabled = currentCheckbox.checked;
        if (currentCheckbox.checked) endDateInput.value = '';
      });

      addBtn.addEventListener('click', () => {
        modalTitle.textContent = 'Add Experience';
        form.reset();
        document.getElementById('experience-id').value = '';
        endDateInput.disabled = false;
        modal.classList.add('active');
      });

      [closeBtn, cancelBtn].forEach(btn => {
        btn.addEventListener('click', () => modal.classList.remove('active'));
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.classList.remove('active');
      });

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const supabase = window.supabaseClient;
        const id = document.getElementById('experience-id').value;
        const data = {
          title: document.getElementById('experience-title').value,
          company: document.getElementById('experience-company').value,
          location: document.getElementById('experience-location').value || null,
          description: document.getElementById('experience-description').value,
          start_date: document.getElementById('experience-start').value,
          end_date: document.getElementById('experience-end').value || null,
          is_current: document.getElementById('experience-current').checked,
          sort_order: parseInt(document.getElementById('experience-order').value) || 0
        };

        try {
          let result;
          if (id) {
            result = await supabase.from('experience').update(data).eq('id', id);
          } else {
            result = await supabase.from('experience').insert(data);
          }
          
          if (result.error) {
            console.error('Supabase error:', result.error);
            showToast('Error saving experience: ' + result.error.message, 'error');
            return;
          }
          
          showToast(id ? 'Experience updated successfully' : 'Experience added successfully', 'success');
          modal.classList.remove('active');
          loadExperience();
        } catch (error) {
          console.error('Error:', error);
          showToast('Error saving experience', 'error');
        }
      });
    }

    async function loadExperience() {
      const supabase = window.supabaseClient;
      const { data: experience, error } = await supabase
        .from('experience')
        .select('*')
        .order('sort_order', { ascending: true });

      const tbody = document.getElementById('experience-table');
      const countLabel = document.getElementById('experience-count-label');

      if (error) {
        tbody.innerHTML = '<tr><td colspan="5" class="empty-state"><i class="fas fa-exclamation-circle"></i><p>Error loading experience</p></td></tr>';
        countLabel.textContent = 'Error';
        return;
      }

      countLabel.textContent = (experience ? experience.length : 0) + ' entries';

      if (!experience || experience.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" class="empty-state"><i class="fas fa-briefcase"></i><h3>No experience yet</h3><p>Add your first experience</p></td></tr>';
        return;
      }

      tbody.innerHTML = experience.map(exp => {
        const startYear = new Date(exp.start_date).getFullYear();
        const endYear = exp.end_date ? new Date(exp.end_date).getFullYear() : 'Present';
        return `
          <tr>
            <td><strong>${exp.title}</strong></td>
            <td>${exp.company}</td>
            <td>${startYear} - ${endYear}</td>
            <td>${exp.is_current ? '<span class="tag tag-green">Current</span>' : '<span class="tag tag-orange">Past</span>'}</td>
            <td class="table-actions">
              <button class="btn-icon btn-edit" onclick="editExperience('${exp.id}')" title="Edit">
                <i class="fas fa-edit"></i>
              </button>
              <button class="btn-icon btn-delete" onclick="deleteExperience('${exp.id}')" title="Delete">
                <i class="fas fa-trash"></i>
              </button>
            </td>
          </tr>
        `;
      }).join('');
    }

    async function editExperience(id) {
      const supabase = window.supabaseClient;
      const { data: exp } = await supabase.from('experience').select('*').eq('id', id).single();
      
      if (exp) {
        document.getElementById('modal-title').textContent = 'Edit Experience';
        document.getElementById('experience-id').value = exp.id;
        document.getElementById('experience-title').value = exp.title;
        document.getElementById('experience-company').value = exp.company;
        document.getElementById('experience-location').value = exp.location || '';
        document.getElementById('experience-description').value = exp.description;
        document.getElementById('experience-start').value = exp.start_date;
        document.getElementById('experience-end').value = exp.end_date || '';
        document.getElementById('experience-current').checked = exp.is_current || false;
        document.getElementById('experience-end').disabled = exp.is_current || false;
        document.getElementById('experience-order').value = exp.sort_order || 0;
        document.getElementById('experience-modal').classList.add('active');
      }
    }

    async function deleteExperience(id) {
      const supabase = window.supabaseClient;
      if (confirm('Are you sure you want to delete this experience?')) {
        await supabase.from('experience').delete().eq('id', id);
        showToast('Experience deleted', 'success');
        loadExperience();
      }
    }

    function showToast(message, type) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = `toast ${type} show`;
      setTimeout(() => toast.classList.remove('show'), 3000);
    }
  </script>
</AdminLayout>
