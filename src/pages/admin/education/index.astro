---
import AdminLayout from '../../../layouts/AdminLayout.astro';
---

<AdminLayout title="Manage Education" activeTab="education">
  <div class="data-card">
    <div class="data-card-header">
      <h2>All Education</h2>
      <button class="btn-add" id="add-education-btn">
        <i class="fas fa-plus"></i>
        Add Education
      </button>
    </div>
    <table class="data-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Degree</th>
          <th>Institution</th>
          <th>Duration</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="education-table">
        <tr>
          <td colspan="6" class="empty-state">
            <i class="fas fa-spinner fa-spin"></i>
            <p>Loading...</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Add/Edit Modal -->
  <div class="modal-overlay" id="education-modal">
    <div class="modal">
      <div class="modal-header">
        <h3 id="modal-title">Add Education</h3>
        <button class="modal-close" id="close-modal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form id="education-form">
        <div class="modal-body">
          <input type="hidden" id="education-id">
          <div class="form-group">
            <label for="education-degree">Degree *</label>
            <input type="text" id="education-degree" required placeholder="B.Sc in Computer Science">
          </div>
          <div class="form-group">
            <label for="education-institution">Institution *</label>
            <input type="text" id="education-institution" required placeholder="University Name">
          </div>
          <div class="form-group">
            <label for="education-image">Image URL</label>
            <input type="text" id="education-image" placeholder="/assets/images/educat/...">
          </div>
          <div style="display:grid;grid-template-columns:1fr 1fr;gap:16px;">
            <div class="form-group">
              <label for="education-start">Start Year *</label>
              <input type="number" id="education-start" required min="1990" max="2030" placeholder="2021">
            </div>
            <div class="form-group">
              <label for="education-end">End Year</label>
              <input type="number" id="education-end" min="1990" max="2030" placeholder="2025">
            </div>
          </div>
          <div class="form-group">
            <label for="education-status">Status</label>
            <select id="education-status" style="width:100%;padding:12px;border:1px solid #e2e8f0;border-radius:8px;">
              <option value="Pursuing">Pursuing</option>
              <option value="Completed">Completed</option>
            </select>
          </div>
          <div class="form-group">
            <label for="education-order">Sort Order</label>
            <input type="number" id="education-order" value="0" min="0">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-secondary" id="cancel-modal">Cancel</button>
          <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i>
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast"></div>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initEducationPage, 500);
    });

    function initEducationPage() {
      const modal = document.getElementById('education-modal');
      const form = document.getElementById('education-form');
      const addBtn = document.getElementById('add-education-btn');
      const closeBtn = document.getElementById('close-modal');
      const cancelBtn = document.getElementById('cancel-modal');
      const modalTitle = document.getElementById('modal-title');

      loadEducation();

      addBtn.addEventListener('click', () => {
        modalTitle.textContent = 'Add Education';
        form.reset();
        document.getElementById('education-id').value = '';
        modal.classList.add('active');
      });

      [closeBtn, cancelBtn].forEach(btn => {
        btn.addEventListener('click', () => modal.classList.remove('active'));
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.classList.remove('active');
      });

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const supabase = window.supabaseClient;
        const id = document.getElementById('education-id').value;
        const data = {
          degree: document.getElementById('education-degree').value,
          institution: document.getElementById('education-institution').value,
          image: document.getElementById('education-image').value || null,
          start_year: parseInt(document.getElementById('education-start').value),
          end_year: document.getElementById('education-end').value ? parseInt(document.getElementById('education-end').value) : null,
          status: document.getElementById('education-status').value,
          sort_order: parseInt(document.getElementById('education-order').value) || 0
        };

        try {
          let result;
          if (id) {
            result = await supabase.from('education').update(data).eq('id', id);
          } else {
            result = await supabase.from('education').insert(data);
          }
          
          if (result.error) {
            console.error('Supabase error:', result.error);
            showToast('Error saving education: ' + result.error.message, 'error');
            return;
          }
          
          showToast(id ? 'Education updated successfully' : 'Education added successfully', 'success');
          modal.classList.remove('active');
          loadEducation();
        } catch (error) {
          console.error('Error:', error);
          showToast('Error saving education', 'error');
        }
      });
    }

    async function loadEducation() {
      const supabase = window.supabaseClient;
      const { data: education, error } = await supabase
        .from('education')
        .select('*')
        .order('sort_order', { ascending: true });

      const tbody = document.getElementById('education-table');

      if (error) {
        tbody.innerHTML = '<tr><td colspan="6" class="empty-state"><i class="fas fa-exclamation-circle"></i><p>Error loading education</p></td></tr>';
        return;
      }

      if (!education || education.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="empty-state"><i class="fas fa-graduation-cap"></i><h3>No education yet</h3><p>Add your first education</p></td></tr>';
        return;
      }

      tbody.innerHTML = education.map(edu => `
        <tr>
          <td>${edu.image ? `<img src="${edu.image}" alt="${edu.institution}" class="table-image" loading="lazy">` : '-'}</td>
          <td>${edu.degree}</td>
          <td>${edu.institution}</td>
          <td>${edu.start_year} - ${edu.end_year || 'Present'}</td>
          <td>${edu.status === 'Pursuing' ? '<span class="tag tag-blue">Pursuing</span>' : '<span class="tag tag-green">Completed</span>'}</td>
          <td class="table-actions">
            <button class="btn-icon btn-edit" onclick="editEducation('${edu.id}')">
              <i class="fas fa-edit"></i>
            </button>
            <button class="btn-icon btn-delete" onclick="deleteEducation('${edu.id}')">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
      `).join('');
    }

    async function editEducation(id) {
      const supabase = window.supabaseClient;
      const { data: edu } = await supabase.from('education').select('*').eq('id', id).single();
      
      if (edu) {
        document.getElementById('modal-title').textContent = 'Edit Education';
        document.getElementById('education-id').value = edu.id;
        document.getElementById('education-degree').value = edu.degree;
        document.getElementById('education-institution').value = edu.institution;
        document.getElementById('education-image').value = edu.image || '';
        document.getElementById('education-start').value = edu.start_year;
        document.getElementById('education-end').value = edu.end_year || '';
        document.getElementById('education-status').value = edu.status || 'Completed';
        document.getElementById('education-order').value = edu.sort_order || 0;
        document.getElementById('education-modal').classList.add('active');
      }
    }

    async function deleteEducation(id) {
      const supabase = window.supabaseClient;
      if (confirm('Are you sure you want to delete this education?')) {
        await supabase.from('education').delete().eq('id', id);
        showToast('Education deleted', 'success');
        loadEducation();
      }
    }

    function showToast(message, type) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = `toast ${type} show`;
      setTimeout(() => toast.classList.remove('show'), 3000);
    }
  </script>
</AdminLayout>
