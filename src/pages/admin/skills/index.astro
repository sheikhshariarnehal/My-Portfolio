---
import AdminLayout from '../../../layouts/AdminLayout.astro';
---

<AdminLayout title="Manage Skills" activeTab="skills">
  <div class="data-card">
    <div class="data-card-header">
      <h2>All Skills</h2>
      <button class="btn-add" id="add-skill-btn">
        <i class="fas fa-plus"></i>
        Add Skill
      </button>
    </div>
    <table class="data-table">
      <thead>
        <tr>
          <th>Icon</th>
          <th>Name</th>
          <th>Category</th>
          <th>Order</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="skills-table">
        <tr>
          <td colspan="5" class="empty-state">
            <i class="fas fa-spinner fa-spin"></i>
            <p>Loading...</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Add/Edit Modal -->
  <div class="modal-overlay" id="skill-modal">
    <div class="modal">
      <div class="modal-header">
        <h3 id="modal-title">Add Skill</h3>
        <button class="modal-close" id="close-modal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form id="skill-form">
        <div class="modal-body">
          <input type="hidden" id="skill-id">
          <div class="form-group">
            <label for="skill-name">Name *</label>
            <input type="text" id="skill-name" required placeholder="e.g., JavaScript">
          </div>
          <div class="form-group">
            <label for="skill-icon">Icon URL *</label>
            <input type="url" id="skill-icon" required placeholder="https://cdn.jsdelivr.net/...">
          </div>
          <div class="form-group">
            <label for="skill-category">Category</label>
            <select id="skill-category">
              <option value="frontend">Frontend</option>
              <option value="backend">Backend</option>
              <option value="database">Database</option>
              <option value="tools">Tools</option>
              <option value="general">General</option>
            </select>
          </div>
          <div class="form-group">
            <label for="skill-order">Sort Order</label>
            <input type="number" id="skill-order" value="0" min="0">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-secondary" id="cancel-modal">Cancel</button>
          <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i>
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast"></div>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initSkillsPage, 500);
    });

    function initSkillsPage() { const supabase = window.supabaseClient; if (!supabase) { setTimeout(initSkillsPage, 200); return; }
      const modal = document.getElementById('skill-modal');
      const form = document.getElementById('skill-form');
      const addBtn = document.getElementById('add-skill-btn');
      const closeBtn = document.getElementById('close-modal');
      const cancelBtn = document.getElementById('cancel-modal');
      const modalTitle = document.getElementById('modal-title');

      loadSkills();

      // Open modal for adding
      addBtn.addEventListener('click', () => {
        modalTitle.textContent = 'Add Skill';
        form.reset();
        document.getElementById('skill-id').value = '';
        modal.classList.add('active');
      });

      // Close modal
      [closeBtn, cancelBtn].forEach(btn => {
        btn.addEventListener('click', () => modal.classList.remove('active'));
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.classList.remove('active');
      });

      // Form submission
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const id = document.getElementById('skill-id').value;
        const data = {
          name: document.getElementById('skill-name').value,
          icon: document.getElementById('skill-icon').value,
          category: document.getElementById('skill-category').value,
          sort_order: parseInt(document.getElementById('skill-order').value) || 0
        };

        try {
          if (id) {
            await supabase.from('skills').update(data).eq('id', id);
            showToast('Skill updated successfully', 'success');
          } else {
            await supabase.from('skills').insert(data);
            showToast('Skill added successfully', 'success');
          }
          modal.classList.remove('active');
          loadSkills();
        } catch (error) {
          showToast('Error saving skill', 'error');
        }
      });
    }

    async function loadSkills() {
      const supabase = window.supabaseClient;
      const { data: skills, error } = await supabase
        .from('skills')
        .select('*')
        .order('sort_order', { ascending: true });

      const tbody = document.getElementById('skills-table');

      if (error) {
        tbody.innerHTML = '<tr><td colspan="5" class="empty-state"><i class="fas fa-exclamation-circle"></i><p>Error loading skills</p></td></tr>';
        return;
      }

      if (!skills || skills.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5" class="empty-state"><i class="fas fa-code"></i><h3>No skills yet</h3><p>Add your first skill</p></td></tr>';
        return;
      }

      tbody.innerHTML = skills.map(skill => `
        <tr>
          <td><img src="${skill.icon}" alt="${skill.name}" class="table-image" style="width:32px;height:32px;" loading="lazy"></td>
          <td>${skill.name}</td>
          <td><span class="tag tag-blue">${skill.category || 'general'}</span></td>
          <td>${skill.sort_order || 0}</td>
          <td class="table-actions">
            <button class="btn-icon btn-edit" onclick="editSkill('${skill.id}')">
              <i class="fas fa-edit"></i>
            </button>
            <button class="btn-icon btn-delete" onclick="deleteSkill('${skill.id}')">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
      `).join('');
    }

    async function editSkill(id) {
      const supabase = window.supabaseClient;
      const { data: skill } = await supabase.from('skills').select('*').eq('id', id).single();
      
      if (skill) {
        document.getElementById('modal-title').textContent = 'Edit Skill';
        document.getElementById('skill-id').value = skill.id;
        document.getElementById('skill-name').value = skill.name;
        document.getElementById('skill-icon').value = skill.icon;
        document.getElementById('skill-category').value = skill.category || 'general';
        document.getElementById('skill-order').value = skill.sort_order || 0;
        document.getElementById('skill-modal').classList.add('active');
      }
    }

    async function deleteSkill(id) {
      const supabase = window.supabaseClient;
      if (confirm('Are you sure you want to delete this skill?')) {
        await supabase.from('skills').delete().eq('id', id);
        showToast('Skill deleted', 'success');
        loadSkills();
      }
    }

    function showToast(message, type) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = `toast ${type} show`;
      setTimeout(() => toast.classList.remove('show'), 3000);
    }
  </script>
</AdminLayout>

